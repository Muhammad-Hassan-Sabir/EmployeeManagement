@model IList<UserRoleViewModel>
@{
    ViewData["Title"] = "EditUsersInRole";
    var roleId = ViewBag.roleId;
}


<form method="post">

 <div class="card mb-3">
            <div class="card-header">
                Add or Remove users from this role
            </div>
            <div class="card-body">
              @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input asp-for="@Model[i].UserName" type="hidden">
                    <input asp-for="@Model[i].UserId" type="hidden">
                    <input asp-for="@Model[i].IsSelected">
                    <label asp-for="@Model[i].IsSelected">
                        @Model[i].UserName
                    </label>

                </div>
            }

        
            </div>
            <div class="card-footer">
                    <input style="width:auto" type="submit" value="Update" class="btn btn-primary"></input>
                    <a asp-controller="administration" asp-action="EditRole" asp-route-id="@roleId"  class="btn btn-danger">Cancel</a>
            </div>
        </div>
</form>

     
    

