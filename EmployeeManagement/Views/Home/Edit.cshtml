@model EmployeeEditViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Edit Employee";
    var photoPath = "~/images/" + (Model.ExistingPhotoPath ?? "noimage.png");
}

<form enctype="multipart/form-data" asp-controller="home" asp-action="Edit" method="post">
    <input hidden asp-for="ExistingPhotoPath" />
    <input hidden asp-for="Id"/>
    <div class="form-group row">

        <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
       <div class="col-sm-3">
        <input asp-for="Name" type="text" class="form-control" placeholder="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
       </div>
    </div>
       <div class="form-group row pt-1">

        <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
       <div class="col-sm-3">
        <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
         <span asp-validation-for="Email" class="text-danger"></span>
       </div>
    </div>
     <div class="form-group row pt-1">

        <label asp-for="Department" class="col-sm-2 col-form-label">Department</label>
       <div class="col-sm-3">
       <select asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()" class=" form-select ">

           <option value="">Please Select</option>

       </select>
          <span asp-validation-for="Department" class="text-danger"></span>
       </div>
    </div>
    <div class="form-group row pt-1">

        <label asp-for="Photo" class="col-sm-2 col-form-label">Photo</label>
       <div class="col-sm-3">
          <div class="custom-file">
                  <input asp-for="Photo" class="custom-file-input form-control">
               
            </div>
       </div>
    </div> 
    <div class="form-group row pt-1">

        
       <div class="col-sm-3 offset-2">
        <img class="imageThumbnail" src="@photoPath" asp-append-version="true" />
       </div>
    </div>
    @*<div asp-validation-summary="All" class="text-danger"></div>*@
    <div class="row pt-4">
        <div  class="col-sm-3 offset-sm-2">
          <button type="submit" class="btn btn-primary">Update</button>
         <a asp-action="index" asp-controller="home" class="btn btn-secondary">Cancel</a>
        </div>
    </div>



