@model IEnumerable<Employee>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    
    ViewBag.Title = "Employee List";
}


<div class="card-deck flex-wrap d-flex flex-row justify-content">
    @foreach (var employee in Model)
    {

        var photoPath = "~/images/" + (employee.PhotoPath ?? "noimage.png");

               <div class="card ">
                <div class="card-header">
                    <h3>@employee.Name</h3>
                </div>
                                <img style="width:90%;" class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary">View</a>
                    <a asp-controller="home" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-primary">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                </div>
            </div>
    }
</div>